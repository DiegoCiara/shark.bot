server {
    listen 443 ssl;
    server_name socket.api-sharkpromotora.com.br;
    ssl_certificate /etc/letsencrypt/live/api-sharkpromotora.com.br/fullchain.pem; # managed by Certbot
    ssl_certificate_key /etc/letsencrypt/live/api-sharkpromotora.com.br/privkey.pem; # managed by Certbot
    include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot


    location / {
        # Proxy para um socket
        proxy_pass http://localhost:7777;

        # Versão HTTP
        proxy_http_version 1.1;

        # Upgrade para WebSockets
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';

        # Cabeçalho do host
        proxy_set_header Host $host;

        # Cabeçalho para manter a lista de proxies intermediários
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;

        # Passar todos os cabeçalhos ao backend
        proxy_pass_request_headers on;

        # Cache Bypass para WebSockets
        proxy_cache_bypass $http_upgrade;
    }
}

server {
    if ($host = socket.api-sharkpromotora.com.br) {
        return 301 https://$host$request_uri;
    } # managed by Certbot


    listen 80;
    server_name socket.api-sharkpromotora.com.br;
    return 301 https://$host$request_uri;

}

